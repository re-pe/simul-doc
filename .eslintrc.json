{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true
      },
      "parser": "babel-eslint",
      "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
      "rules": {
        "no-underscore-dangle": [
          "error",
          {
              "allow": [
                  "_id"
              ]
          }
      ],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "jsx-a11y/anchor-is-valid": [ "error", {
          "components": [ "Link" ],
          "specialLink": [ "to" ]
        }]
      }
}